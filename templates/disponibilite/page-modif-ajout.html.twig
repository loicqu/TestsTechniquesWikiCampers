{% extends 'base.html.twig' %}

{% block title %}
    Ajout d'une disponibilité
{% endblock %}

{% block body %}
<div style="margin-top: 50px;">
  <div class="d-flex justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
            Ajout d'une disponibilité
        </div>
        <div class="card-body">
          {{ form_start(form) }}
          {{ form_widget(form) }}
            <div class="d-flex un-sur-autre justify-content-center">
              <button class="btn btn-primary" type="submit">ENREGISTRER</button>
              <a class="btn-retour-un-sur-autre" href="{{ path('afficherLesDisponibilitesAdmin') }}">Retour</a>
            </div>
          {{ form_end(form) }}
        </div>

      </div>
    </div>
  </div>
</div>
{% endblock %}